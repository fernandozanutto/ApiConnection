<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ApiConnection" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item> <!-- buttons background -->
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorPrimaryDark">@color/background</item> <!-- App top bar (notifications) -->
        <item name="colorOnPrimary">@color/dark_gray</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/teal_200</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/gray</item>

        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="windowActionBar">true</item>
        <item name="actionBarStyle">@style/ActionBar</item>

        <item name="android:textColor">@color/dark_gray</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/background</item>
    </style>

    <style name="Theme.ApiConnection.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ApiConnection.Card" parent="Widget.MaterialComponents.CardView">
        <item name="elevation">1dp</item>
    </style>

    <style name="Theme.ApiConnection.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.ApiConnection.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>